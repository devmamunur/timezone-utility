{
  "compilerOptions": {
    "module": "CommonJS",
    "rootDir": "./",
    "moduleResolution": "Node",
    "baseUrl": ".",
 
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"] 
}
